@import "../common/lib/weui.wxss";

/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-left: 20px;
  margin-top: 20px;
  margin-right: 20px;

}

.information{
  padding: 10px;
}

.section_title{
  background-color: #f0f0f0;
  margin-top: 10px;
}
.weui-label{
  width: 5em;
}
.btn-area {
  margin: 0.5em 15px 0.3em;
}

.weui-cells::after {
  border-bottom:0px solid #D9D9D9;
}

.weui-cells::before {
  border-top:0px solid #D9D9D9;
}

